<!DOCTYPE html>
<html>
  <head>
    <title> update employee data</title>
    <style>
      div{
        background-color: lightgrey;
        border: 2px solid black;
        border-radius: 5px;
        padding: 2px;
        margin: 5px;
        width: 40%;
      }
    </style>
  </head>
    <body>
        <h2> Update Employee Details </h2>
        <% for(i=0;i<data.length;i++)
        { %>
          <form action="/updatedata2/<%=data[i].empid%>" method="post">
            <div> 
              <p>empid :<input style="border-radius: 5px;" type="text" name="empid" placeholder="<%=data[i].empid%>"/></p>
              <p></p>password :<input style="border-radius: 5px;" type="password" name="password" placeholder="<%=data[i].password%>"/></p>
              <p></p>name :<input style="border-radius: 5px;" type="text" name="name" placeholder="<%=data[i].name%>"/></p>
              <p></p>address :<input style="border-radius: 5px;" type="text" name="address" placeholder="<%=data[i].address%>"/></p>
              <p></p>phone :<input style="border-radius: 5px;" type="text" name="phone" placeholder="<%=data[i].phone%>"/></p>
              <p></p>salary :<input style="border-radius: 5px;" type="text" name="salary" placeholder="<%=data[i].salary%>"/></p>
              <p></p>department :<input style="border-radius: 5px;" type="text" name="department" placeholder="<%=data[i].department%>"/></p>
              <p><input style="border-radius: 5px;" type="submit"/></p>
            </div>
          </form>
      <% } %> 
      <a href="./" style="color:black">BACK TO HOME PAGE</a>
    </body>
</html>